# ğŸ Base image with Python
FROM python:3.10-slim

# ğŸ›  Install system dependencies
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    libgomp1 \              
    && rm -rf /var/lib/apt/lists/*

# ğŸ— Set working directory
WORKDIR /app

# ğŸ“¦ Copy and install dependencies
COPY requirements.txt .
RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt

# ğŸš€ Preload PaddleOCR model during image build
COPY preload_model.py .
RUN python preload_model.py

# ğŸ§  Copy the main app
COPY main.py .


# ğŸŒ Expose the FastAPI default port
EXPOSE 8000

# ğŸš€ Start the FastAPI app using Uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]